generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  email        String @id @unique @db.VarChar(100)
  username     String @db.VarChar(20)
  password     String
  image        Int    @default(1)
  refreshToken String

  @@map("users")
}